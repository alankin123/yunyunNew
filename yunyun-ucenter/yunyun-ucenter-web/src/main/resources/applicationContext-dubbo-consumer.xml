<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">

    <dubbo:application name="yunyun-ucenter-web"/>

    <dubbo:registry file="./yunyun-ucenter-web-dubbo.cache" address="zookeeper://192.168.140.128:2181"/>

    <!-- 订阅服务 -->
    <dubbo:consumer check="false"/>

    <!-- 认证方式 -->
    <dubbo:reference id="userBaseService" interface="com.alankin.ucenter.rpc.api.UserBaseService" mock="true"/>

</beans>